<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICONVERTER_Bas.Pages.Bytes"
             Title="Bytes">
    <ScrollView>
    <Grid>
       
            <Image Source="bgmain.png"
               Aspect="Fill"/>
            <VerticalStackLayout HorizontalOptions="Center">
                <Label Text="Information"
                   TextColor="White"
                    FontSize="36"
                    FontAttributes="Bold"
                    FontFamily="lexend"
                    Margin="0,20,0,0"
                    HorizontalTextAlignment="Center"/>

                <Label Text="Choose on what to change!"
                   TextColor="White"
                   FontSize="13"
                   FontFamily="century gothic"
                   HorizontalTextAlignment="Center"/>

                <Label Text="1"
                   TextColor="White"
                   FontSize="72"
                   FontFamily="century gothic"
                   Margin="0,100,0,0"
                   HorizontalTextAlignment="Center"/>

                <Picker
                   TextColor="White"
                   TitleColor="White"
                   BackgroundColor="#40FFFFFF"
                   WidthRequest="320"
                   Margin="0, 10, 0, 0"
                   HorizontalOptions="Center"
                   SelectedIndex="0">

                    <Picker.Items>
                        <x:String>Gigabyte</x:String>
                    </Picker.Items>
                </Picker>

                <Frame BackgroundColor="#c4ab86" WidthRequest="345" HeightRequest="300" Margin="0,30,0,0" CornerRadius="15">
                    <VerticalStackLayout HorizontalOptions="Center">

                        <Label Text="1000"
                   TextColor="White"
                   FontSize="72"
                   FontFamily="century gothic"
                   Margin="0,30,0,0"
                   HorizontalTextAlignment="Center"/>

                        <Picker
                        TextColor="White"
                        TitleColor="White"
                        BackgroundColor="#40FFFFFF"
                        WidthRequest="320"
                        Margin="0, 10, 0, 0"
                        HorizontalOptions="Center"
                        SelectedIndex="0">

                            <Picker.Items>
                                <x:String>Megabyte</x:String>
                            </Picker.Items>
                        </Picker>

                    </VerticalStackLayout>
                </Frame>


            </VerticalStackLayout>
       
    </Grid> 
    </ScrollView>
</ContentPage>